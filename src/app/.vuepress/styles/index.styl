/* # UIKit */
/* ############################################################################################# */
a:-webkit-any-link {
  text-decoration: none;
}

.custom-block.tip {
  margin: 20px 0 20px 0 !important;
  padding: 1rem 1rem !important;
}

.custom-block.warning {
  margin: 20px 0 20px 0 !important;
  padding: 1rem 1rem !important;
}

.custom-block.alert {
  margin: 20px 0 20px 0 !important;
  padding: 1rem 1rem !important;
}

